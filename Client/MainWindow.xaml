<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    
    <Grid>

        <StackPanel>

            <Label Height="30"
                   Width="150"
                   VerticalAlignment="Top"
                   Margin="0 80 0 0"
                   FontWeight="Bold">IP</Label>
            <TextBox
                Name="IpTextBox"
                Height="30"
                Width="150"
                VerticalAlignment="Top"
                Margin="0 0 0 0"></TextBox>

            <Label Height="30"
                   Width="150"
                   VerticalAlignment="Top"
                   Margin="0 20 0 0"
                   FontWeight="Bold">Port</Label>
            <TextBox Name="PortTextBox"
                     Height="30"
                     Width="150"
                     VerticalAlignment="Top"
                     Margin="0 0 0 0"></TextBox>

            <Button Height="40" Width="120" Margin="0 30 0 0" Click="SendImageButton_Click" FontWeight="Bold" FontSize="16">Send Image</Button>

        </StackPanel>
        
    </Grid>
</Window>
